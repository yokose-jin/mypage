---
const {title,filesData} = Astro.props;
import PageTitle from "../components/PageTitle.astro";
import "../styles/global.css";
// import seminarNotesData from "../data/seminarNotes.json";
---
<html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>{title}</title>
    </head>
    <body>
        <PageTitle title={title}/>
        <ul>
            {
                filesData.map((data:any) => (
                    <li>{data.category}</li>
                    <ul>
                        {data.files.map((file:any) => (
                            <li><a class="docTitle" href={file.link} target="_blank" rel="noopener noreferrer">{file.title}</a></li>
                            <p class="description">{file.description}</p>
                        ))}
                    </ul>
                ))
            }
        </ul>
    </body>
</html>