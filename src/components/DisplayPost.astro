---
import Tag from "../components/Tag.astro";
import "../styles/global.css";
const {url,title,description,lastUpdatedDate,tags} = Astro.props;
const baseUrl = import.meta.env.BASE_URL;
---
<style>
	.lastUpdatedDate {
		font-size: 0.7em;
	}
    .icon {
        vertical-align: middle;
    }
    .goAllTags {
        font-size: 0.4em;
        color: rgb(129, 78, 71);
        vertical-align: bottom;
    }
    .tags {
        margin-top:0px;
    }
</style>
<li>
    <span class="material-icons icon">article</span>
    <a class="docTitle" href={url}>{title}</a>
</li>
<span class="lastUpdatedDate">最終更新日:{lastUpdatedDate.slice(0,10)}</span>
<p class="tags">
    {(tags ?? []).map((tag:string)=>(<Tag tag={tag}/>))}
    <span class="goAllTags"><a href=`${baseUrl}/tags`>タグ一覧へ</a></span>
</p>
<p class="description">{description}</p>
